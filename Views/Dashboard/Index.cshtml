@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form action="/Dashboard/StartTransfer" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select file to transfer:</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="destinationUrl">Destination URL:</label>
        <input type="text" name="destinationUrl" class="form-control" placeholder="Enter SharePoint destination URL" required />
    </div>
    <button type="submit" class="btn btn-primary">Start Transfer</button>
</form>
